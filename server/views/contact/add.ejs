<%- include ../partials/conheader.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-13">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Contact Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Contact Name"
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="developerTextField">Contact Number</label>
                    <input type="tel" class="form-control"
                    id="numberTextField"
                    placeholder="Enter the Contact's Number"
                    name="number" required>
                </div>

                <div class="form-group">
                    <label for="releasedTextField">Contact Email</label>
                    <input type="email" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the Contact's Email"
                    name="email" required>
                </div>

                <br>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>

                <a href="/contacts-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>
            </form>
        </div>
    </div>
</div>


