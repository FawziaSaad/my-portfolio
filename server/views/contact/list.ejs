<%- include ../partials/conheader.ejs %>  

  <!-- Main Content -->
  <main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-11">
            <h1>Business <%= title %></h1>
            <% if (typeof displayName == 'string' && displayName) { %>
                <a href="/contacts-list/add" class="btn btn-primary" role="button">
                    <i class="fas fa-plus-circle"></i> Add a Contact</a>
                <% } %>
                <br>
                <table class="table table-bordered table-striped table-hover">
                <!-- Header Row -->
                <tr class="d-flex">
                    <% if (typeof displayName == 'string' && displayName) { %>
                        <th class="text-center col-2">Name</th>
                        <th class="text-center col-2">Number</th>
                        <th class="text-center col-5">email</th>
                        <th class="text-center col-2"></th>
                        <th class="text-center col-2"></th>
                    <% } else { %>
                        <th class="text-center col-5">Name</th>
                        <th class="text-center col-5">Number</th>
                        <th class="text-center col-7">email</th>
                    <% } %>
                </tr>
                <!-- Repeatable Template Row -->
                <% for(let count = 0; count < ContactList.length; count++) { %>
                    <tr class="d-flex">
                        <% if (typeof displayName == 'string' && displayName) { %>
                            <td class="text-center col-2"><%= ContactList[count].name %></td>
                            <td class="text-center col-2"><%= ContactList[count].number %></td>
                            <td class="text-center col-5"><%= ContactList[count].email %></td>
                            <td class="text-center col-2">
                                <a href="/contacts-list/update/<%= ContactList[count]._id %>" class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i> Update</a>
                            </td>
                            <td class="text-center col-2">
                                <a href="/contacts-list/delete/<%= ContactList[count]._id %>" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                        <% } else { %>
                            <td class="text-center col-5"><%= ContactList[count].name %></td>
                            <td class="text-center col-5"><%= ContactList[count].number %></td>
                            <td class="text-center col-7"><%= ContactList[count].email %></td>
                        <% } %>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </main>
  
<%- include ../partials/confooter.ejs %>
